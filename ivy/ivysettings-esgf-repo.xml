<ivy-settings>
  <property name="ivy.esgf-repo.default.root.url" value="https://raw.github.com/ESGF/esgf-artifacts/master/repositories/esgf-repo" override="true"/>
  <resolvers>
      <url name="esgf_repo">
        <ivy pattern="${ivy.esgf-repo.default.root.url}/[organisation]/[module]/[revision]/ivy-[revision].xml" />
        <artifact pattern="${ivy.esgf-repo.default.root.url}/[organisation]/[module]/[revision]/[artifact]-[revision](-[classifier]).[ext]" />
	<artifact pattern="${ivy.esgf-repo.default.root.url}/[organisation]/[module]/[revision]/[artifact].[revision].[ext]" />
      </url>
  </resolvers>
</ivy-settings>

